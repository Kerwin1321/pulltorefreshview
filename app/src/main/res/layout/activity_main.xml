<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhangke.pulltorefreshview.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffaaaa"
        android:onClick="pullListView"
        android:padding="10dp"
        android:text="ListView演示"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffaaaa"
        android:onClick="pullGridView"
        android:padding="10dp"
        android:text="GridView演示"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffaaaa"
        android:onClick="swipeRecyclerView"
        android:padding="10dp"
        android:text="SwipeRecyclerView演示"
        android:textSize="20sp" />


</LinearLayout>
